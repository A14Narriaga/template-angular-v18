{
	"name": "template-angular",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"watch": "ng build --watch --configuration development",
		"dev": "concurrently --names 'app,test' 'yarn start:dev' 'yarn test:dev'",
		"start": "node dist/template-angular/server/server.mjs",
		"start:dev": "ng serve --host 0.0.0.0 --port 4200",
		"test": "jest --coverage",
		"test:dev": "jest --watch",
		"build": "yarn build:clean && ng build --base-href ./",
		"build:github": "yarn docs:clean && yarn build && yarn copy:app",
		"build:clean": "rimraf dist; exit 0",
		"docs:clean": "rimraf docs; exit 0",
		"copy:app": "copyfiles dist/template-angular/browser/* ./docs -f",
		"type-check": "tsc --pretty --noEmit",
		"format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
		"format:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
		"lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
		"lint:fix": "yarn lint --fix",
		"prepare": "husky"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^18.0.0",
		"@angular/common": "^18.0.0",
		"@angular/compiler": "^18.0.0",
		"@angular/core": "^18.0.0",
		"@angular/forms": "^18.0.0",
		"@angular/platform-browser": "^18.0.0",
		"@angular/platform-browser-dynamic": "^18.0.0",
		"@angular/platform-server": "^18.0.0",
		"@angular/router": "^18.0.0",
		"@angular/ssr": "^18.0.2",
		"express": "^4.18.2",
		"rxjs": "~7.8.0",
		"zone.js": "~0.14.3"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^18.0.2",
		"@angular/cli": "^18.0.2",
		"@angular/compiler-cli": "^18.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.12",
		"@types/node": "^18.18.0",
		"@typescript-eslint/parser": "^7.11.0",
		"angular-eslint": "18.0.1",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.3.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"eslint-plugin-unicorn": "^53.0.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"jest-preset-angular": "^14.1.0",
		"postcss": "^8.4.38",
		"prettier": "^3.3.0",
		"tailwindcss": "^3.4.3",
		"typescript": "~5.4.2",
		"typescript-eslint": "8.0.0-alpha.20"
	}
}
